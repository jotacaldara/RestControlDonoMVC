<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RestFlow Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --brand-color: #0d6efd;
            --bg-light: #f8f9fa;
        }

        body {
            background-color: var(--bg-light);
            font-family: 'Inter', sans-serif;
        }

        /* Navbar Horizontal Customizada */
        .navbar-main {
            background: white;
            border-bottom: 1px solid #e9ecef;
            padding: 0.75rem 2rem;
        }

        .nav-link-custom {
            color: #6c757d;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: 0.2s;
            border-radius: 8px;
        }

            .nav-link-custom:hover, .nav-link-custom.active {
                color: var(--brand-color);
                background: #f0f7ff;
            }

        .user-badge {
            background: #e9ecef;
            padding: 6px 16px;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            color: #495057;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-main sticky-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center fw-bold text-primary" href="#">
                <i class="bi bi-box-fill me-2"></i> RestFlow
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")"
                           asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-grid-1x2 me-1"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Restaurants" ? "active" : "")"
                           asp-area="Admin" asp-controller="Restaurants" asp-action="Index">
                            <i class="bi bi-shop me-1"></i> Restaurantes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Plans" ? "active" : "")"
                           asp-area="Admin" asp-controller="Plans" asp-action="Index">
                            <i class="bi bi-credit-card me-1"></i> Planos & Financeiro
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-custom @(ViewContext.RouteData.Values["Action"]?.ToString() == "Pending" ? "active" : "")"
                           asp-area="Admin" asp-controller="Restaurants" asp-action="Pending">
                            <i class="bi bi-hourglass-split me-1"></i> Pendentes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link-custom @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Users" ? "active" : "")"
                           asp-area="Admin" asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people me-1"></i> Utilizadores
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Earnings" ? "active" : "")"
                           asp-area="Admin"
                           asp-controller="Earnings"
                           asp-action="Index">
                            <i class="bi bi-cash-stack me-1"></i>
                            Ganhos
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SubscriptionsAdmin" ? "active" : "")"
                           asp-area="Admin"
                           asp-controller="SubscriptionsAdmin"
                           asp-action="Index">
                            <i class="bi bi-credit-card me-1"></i>
                            Subscrições
                        </a>
                    </li>
                </ul>

                <div class="d-flex align-items-center">
                    <span class="user-badge"><i class="bi bi-person-circle me-1"></i> @User.Identity.Name</span>

                    <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm" class="d-inline ms-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link text-danger p-0" title="Sair">
                            <i class="bi bi-box-arrow-right fs-5"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </nav>



    <main class="container py-5">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Scripts globais para confirmar ações destrutivas
        function confirmAction(message) {
            return confirm(message || "Tem certeza que deseja realizar esta ação?");
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("Styles", required: false)
</body>
</html>