@model RestControlMVC.DTOs.RestaurantDetailDTO
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using RestControlMVC
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Restaurant_PageTitle"];
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-1 fw-bold" style="color: #1e293b;">
                    <i class="bi bi-shop me-2" style="color: #10b981;"></i>
                    @Localizer["Restaurant_PageTitle"]
                </h1>
                <p class="text-muted mb-0">@Localizer["Restaurant_DetailedInfo"]</p>
            </div>
            <div>
                <a href="@Url.Action("Index", "Dashboard", new { area = "Owner" })"
                   class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-left me-1"></i>
                    @Localizer["Back"]
                </a>
                <a href="@Url.Action("Edit", "Dashboard", new { area = "Owner" })"
                   class="btn btn-success">
                    <i class="bi bi-pencil me-1"></i>
                    @Localizer["Restaurant_EditInfo"]
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Restaurant Info -->
<div class="row g-4 mb-4">
    <div class="col-lg-8">
        <div class="card card-custom border-0">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 fw-bold">
                    <i class="bi bi-info-circle me-2" style="color: #10b981;"></i>
                    @Localizer["Restaurant_GeneralInfo"]
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="mb-4">
                    <label class="text-muted small text-uppercase mb-1" style="letter-spacing: 0.5px;">
                        @Localizer["Restaurant_Name"]
                    </label>
                    <h4 class="mb-0 fw-bold" style="color: #1e293b;">@Model.Name</h4>
                </div>

                <div class="mb-4">
                    <label class="text-muted small text-uppercase mb-2" style="letter-spacing: 0.5px;">
                        @Localizer["Restaurant_Description"]
                    </label>
                    <p class="mb-0" style="line-height: 1.7;">@Model.Description</p>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-8">
                        <label class="text-muted small text-uppercase mb-1" style="letter-spacing: 0.5px;">
                            <i class="bi bi-geo-alt me-1"></i>
                            @Localizer["Restaurant_Address"]
                        </label>
                        <p class="mb-0 fw-semibold">@Model.Address</p>
                    </div>
                    <div class="col-md-4">
                        <label class="text-muted small text-uppercase mb-1" style="letter-spacing: 0.5px;">
                            <i class="bi bi-pin-map me-1"></i>
                            @Localizer["Restaurant_City"]
                        </label>
                        <p class="mb-0 fw-semibold">@Model.City</p>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="text-muted small text-uppercase mb-1" style="letter-spacing: 0.5px;">
                        <i class="bi bi-telephone me-1"></i>
                        @Localizer["Restaurant_Phone"]
                    </label>
                    <p class="mb-0 fw-semibold">
                        <a href="tel:@Model.Phone" class="text-decoration-none" style="color: #10b981;">
                            @Model.Phone
                        </a>
                    </p>
                </div>

                <div class="alert alert-info d-flex align-items-start mb-0">
                    <i class="bi bi-info-circle me-2 mt-1"></i>
                    <div>
                        <strong>@Localizer["ImportantNote"]:</strong>
                        @Localizer["Restaurant_AdminOnlyNote"]
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card card-custom border-0 mb-4">
            <div class="card-body p-4 text-center">
                <div class="mb-3">
                    <div class="display-3 fw-bold mb-1" style="color: #10b981;">
                        @Model.AverageRating.ToString("F1")
                    </div>
                    <div class="text-warning mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(Model.AverageRating))
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else if (i - Model.AverageRating < 1)
                            {
                                <i class="bi bi-star-half"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        }
                    </div>
                    <p class="text-muted mb-0">
                        @string.Format(Localizer["Restaurant_BasedOnReviews"].Value, Model.TotalReviews)
                    </p>
                </div>
            </div>
        </div>

        <div class="card card-custom border-0">
            <div class="card-body p-4">
                <h6 class="fw-bold mb-3">
                    <i class="bi bi-ui-checks-grid me-1" style="color: #10b981;"></i>
                    @Localizer["Restaurant_MenuStats"]
                </h6>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="text-muted">@Localizer["Restaurant_Categories"]</span>
                    <span class="fw-bold">@Model.MenuCategories.Count</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-muted">@Localizer["Restaurant_TotalProducts"]</span>
                    <span class="fw-bold">@Model.MenuCategories.Sum(c => c.Products.Count)</span>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Images != null && Model.Images.Any())
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-custom border-0">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-images me-2" style="color: #10b981;"></i>
                        @Localizer["Restaurant_ImageGallery"]
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        @foreach (var image in Model.Images)
                        {
                            <div class="col-md-4 col-sm-6">
                                <div class="position-relative overflow-hidden rounded" style="padding-top: 66.67%;">
                                    <img src="@image"
                                         alt="@Localizer["Restaurant_ImageAlt"]"
                                         class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover"
                                         style="cursor: pointer;"
                                         onclick="window.open('@image', '_blank')">
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (Model.MenuCategories != null && Model.MenuCategories.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card card-custom border-0">
                <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-book me-2" style="color: #10b981;"></i>
                        @Localizer["Restaurant_MenuPreview"]
                    </h5>
                    <a href="@Url.Action("Index", "Menu", new { area = "Owner" })"
                       class="btn btn-outline-success btn-sm">
                        <i class="bi bi-pencil me-1"></i>
                        @Localizer["Restaurant_EditMenu"]
                    </a>
                </div>
                <div class="card-body p-4">
                    @foreach (var category in Model.MenuCategories)
                    {
                        <div class="mb-4">
                            <h5 class="fw-bold mb-3 pb-2 border-bottom">@category.Name</h5>
                            <div class="row g-3">
                                @foreach (var product in category.Products)
                                {
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="flex-grow-1 me-3">
                                                <h6 class="mb-1 fw-semibold">@product.Name</h6>
                                                <p class="text-muted small mb-0">@product.Description</p>
                                            </div>
                                            <span class="badge bg-success fs-6 fw-semibold" style="min-width: 70px;">
                                                €@product.Price?.ToString("F2")
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
