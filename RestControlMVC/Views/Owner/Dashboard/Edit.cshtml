@model RestControlMVC.DTOs.Owner.RestaurantEditDTO
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using RestControlMVC
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["EditRestaurant_Title"];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>@Localizer["EditRestaurant_Header"]
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description"
                                      class="form-control"
                                      rows="4"
                                      placeholder="@Localizer["EditRestaurant_DescriptionPlaceholder"]"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone"
                                   class="form-control"
                                   placeholder="+351 XXX XXX XXX" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                            <small class="text-muted">@Localizer["EditRestaurant_PhoneFormat"]</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>@Localizer["Note"]:</strong> @Localizer["EditRestaurant_AdminNote"]
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Dashboard", new { area = "Owner" })"
                               class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>@Localizer["Back"]
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>@Localizer["Save"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
