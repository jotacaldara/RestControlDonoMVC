@model RestControlMVC.DTOs.Owner.OwnerDashboardDTO

@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .stat-card {
        border-left: 4px solid;
        transition: all 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.12);
        }

    .stat-card-blue {
        border-left-color: #3b82f6;
    }

    .stat-card-orange {
        border-left-color: #f59e0b;
    }

    .stat-card-green {
        border-left-color: #10b981;
    }

    .stat-card-purple {
        border-left-color: #8b5cf6;
    }

    .stat-card-teal {
        border-left-color: #14b8a6;
    }

    .stat-card-red {
        border-left-color: #ef4444;
    }
</style>

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-1 fw-bold" style="color: #1e293b;">
                    <i class="bi bi-grid-1x2-fill me-2" style="color: #10b981;"></i>
                    Dashboard
                </h1>
                <p class="text-muted mb-0">
                    <i class="bi bi-shop me-1"></i>
                    @Model.RestaurantName
                    <span class="mx-2">•</span>
                    <i class="bi bi-geo-alt me-1"></i>
                    @Model.City
                </p>
            </div>
            <div>
                <a href="@Url.Action("Edit", "Dashboard", new { area = "Owner" })"
                   class="btn btn-outline-success">
                    <i class="bi bi-gear me-1"></i>
                    Configurações
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Alerta de Subscrição Expirando -->
@if (Model.Subscription != null && Model.Subscription.IsExpiring)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Atenção!</strong> Sua subscrição expira em <strong>@Model.Subscription.DaysRemaining dias</strong>.
        <a href="@Url.Action("Index", "Subscription", new { area = "Owner" })" class="alert-link">Renovar agora</a>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Cards - Linha 1 -->
<div class="row g-4 mb-4">
    <!-- Total de Reservas -->
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stat-card-blue border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            Total de Reservas
                        </p>
                        <h3 class="mb-0 fw-bold" style="color: #1e293b;">
                            @Model.TotalReservations
                        </h3>
                    </div>
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 56px; height: 56px; background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
                        <i class="bi bi-calendar-check text-white" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <small class="text-muted">
                        <i class="bi bi-clock me-1"></i>
                        Atualizado agora
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservas Pendentes -->
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stat-card-orange border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            Pendentes
                        </p>
                        <h3 class="mb-0 fw-bold" style="color: #1e293b;">
                            @Model.PendingReservations
                        </h3>
                    </div>
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 56px; height: 56px; background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
                        <i class="bi bi-hourglass-split text-white" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a href="@Url.Action("Index", "Reservations", new { area = "Owner", status = "Pendente" })"
                       class="text-decoration-none small fw-semibold" style="color: #f59e0b;">
                        Ver pendentes
                        <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Avaliação Média -->
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stat-card-green border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            Avaliação Média
                        </p>
                        <h3 class="mb-0 fw-bold" style="color: #1e293b;">
                            @Model.AverageRating.ToString("F1")
                            <span class="small text-muted">/ 5.0</span>
                        </h3>
                    </div>
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 56px; height: 56px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                        <i class="bi bi-star-fill text-white" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <small class="text-muted">
                        <i class="bi bi-chat-left-text me-1"></i>
                        @Model.TotalReviews avaliações
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Produtos no Menu -->
    <div class="col-xl-3 col-md-6">
        <div class="card stat-card stat-card-purple border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            Produtos no Menu
                        </p>
                        <h3 class="mb-0 fw-bold" style="color: #1e293b;">
                            @Model.TotalProducts
                        </h3>
                    </div>
                    <div class="rounded-circle d-flex align-items-center justify-content-center"
                         style="width: 56px; height: 56px; background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);">
                        <i class="bi bi-ui-checks-grid text-white" style="font-size: 1.5rem;"></i>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <a href="@Url.Action("Index", "Menu", new { area = "Owner" })"
                       class="text-decoration-none small fw-semibold" style="color: #8b5cf6;">
                        Gerenciar menu
                        <i class="bi bi-arrow-right ms-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards - Linha 2: FATURAMENTO -->
<div class="row g-4 mb-4">
    <!-- Receita Total -->
    <div class="col-xl-4 col-md-6">
        <div class="card stat-card stat-card-teal border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            <i class="bi bi-cash-stack me-1"></i>
                            Receita Total
                        </p>
                        <h2 class="mb-0 fw-bold text-success">
                            €@Model.TotalRevenue.ToString("N2")
                        </h2>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <small class="text-muted">
                        Valor bruto de todas as reservas
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Comissões Pagas -->
    <div class="col-xl-4 col-md-6">
        <div class="card stat-card stat-card-red border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            <i class="bi bi-percent me-1"></i>
                            Comissões Pagas
                        </p>
                        <h2 class="mb-0 fw-bold text-danger">
                            €@Model.TotalCommissions.ToString("N2")
                        </h2>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <small class="text-muted">
                        @if (Model.Subscription != null)
                        {
                            <span>Comissão de @Model.Subscription.Commission% por reserva</span>
                        }
                        else
                        {
                            <span>Conforme plano contratado</span>
                        }
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Receita Líquida -->
    <div class="col-xl-4 col-md-6">
        <div class="card stat-card stat-card-green border-0 h-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small text-uppercase" style="letter-spacing: 0.5px;">
                            <i class="bi bi-wallet2 me-1"></i>
                            Receita Líquida
                        </p>
                        <h2 class="mb-0 fw-bold" style="color: #10b981;">
                            €@Model.NetRevenue.ToString("N2")
                        </h2>
                    </div>
                </div>
                <div class="mt-3 pt-3 border-top">
                    <small class="text-success">
                        <i class="bi bi-arrow-up me-1"></i>
                        Receita após comissões
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Subscrição + Quick Actions -->
<div class="row g-4 mb-4">
    <!-- Card de Subscrição -->
    @if (Model.Subscription != null)
    {
        <div class="col-lg-4">
            <div class="card border-0 h-100" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                <div class="card-body text-white p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                            <i class="bi bi-credit-card-2-front" style="font-size: 1.75rem;"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 fw-bold">Plano @Model.Subscription.PlanName</h5>
                            <small class="opacity-75">Subscrição Ativa</small>
                        </div>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-6">
                            <div class="p-2 bg-white bg-opacity-10 rounded">
                                <small class="d-block opacity-75">Mensalidade</small>
                                <strong class="fs-5">€@Model.Subscription.monthlyPrice.ToString("F2")</strong>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-2 bg-white bg-opacity-10 rounded">
                                <small class="d-block opacity-75">Dias Restantes</small>
                                <strong class="fs-5">@Model.Subscription.DaysRemaining</strong>
                            </div>
                        </div>
                    </div>

                    @if (Model.Subscription.IsExpiring)
                    {
                        <div class="alert alert-warning bg-white text-dark small mb-3">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            <strong>Expira em @Model.Subscription.DaysRemaining dias!</strong>
                        </div>
                    }

                    <a href="@Url.Action("Index", "Subscription", new { area = "Owner" })"
                       class="btn btn-light btn-sm w-100">
                        <i class="bi bi-eye me-1"></i>
                        Ver Detalhes da Subscrição
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Meu Restaurante -->
    <div class="col-lg-4">
        <div class="card border-0 h-100" style="background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);">
            <div class="card-body text-white p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                        <i class="bi bi-shop" style="font-size: 1.75rem;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Meu Restaurante</h5>
                        <small class="opacity-75">Informações e configurações</small>
                    </div>
                </div>
                <p class="mb-3 opacity-90 small">
                    Visualize e edite as informações do seu restaurante.
                </p>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("RestaurantDetail", "Dashboard", new { area = "Owner" })"
                       class="btn btn-light btn-sm flex-fill">
                        <i class="bi bi-eye me-1"></i>
                        Ver
                    </a>
                    <a href="@Url.Action("Edit", "Dashboard", new { area = "Owner" })"
                       class="btn btn-outline-light btn-sm flex-fill">
                        <i class="bi bi-pencil me-1"></i>
                        Editar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Reservas -->
    <div class="col-lg-4">
        <div class="card border-0 h-100" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
            <div class="card-body text-white p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                        <i class="bi bi-calendar-check" style="font-size: 1.75rem;"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-bold">Reservas</h5>
                        <small class="opacity-75">Gestão de reservas</small>
                    </div>
                </div>
                <p class="mb-3 opacity-90 small">
                    Confirme, cancele e gerencie as reservas do seu restaurante.
                </p>
                <a href="@Url.Action("Index", "Reservations", new { area = "Owner" })"
                   class="btn btn-light btn-sm w-100">
                    <i class="bi bi-calendar-event me-1"></i>
                    Ver Todas as Reservas
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts
        setTimeout(() => {
            $('.alert-dismissible').fadeOut('slow');
        }, 5000);
    </script>
}
