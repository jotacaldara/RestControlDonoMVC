@model List<RestControlMVC.DTOs.PendingRestaurantDTO>

@{
    ViewData["Title"] = "Restaurantes Pendentes";
    var pendingList = Model ?? new List<RestControlMVC.DTOs.PendingRestaurantDTO>();
    var totalPending = pendingList.Count;
    var recentPending = pendingList.Count(r => r.DaysWaiting <= 2);
}

<style>
    .pending-badge {
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.7; }
    }
    
    .info-row {
        border-left: 3px solid #e5e7eb;
        padding-left: 1rem;
        margin-bottom: 0.5rem;
    }
    
    .hover-lift {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .hover-lift:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.1) !important;
    }
</style>

<!-- Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 fw-bold mb-1" style="color: #1e293b;">
                    <i class="bi bi-hourglass-split me-2 text-warning"></i>
                    Restaurantes Pendentes
                </h1>
                <p class="text-muted mb-0">
                    Analise e aprove novos pedidos de registo
                </p>
            </div>
            @if (totalPending > 0)
            {
                <span class="badge bg-warning text-dark rounded-pill px-4 py-2 fs-6 pending-badge">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @totalPending pendente@(totalPending != 1 ? "s" : "")
                </span>
            }
        </div>
    </div>
</div>

<!-- Summary Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm" style="border-radius: 12px; border-left: 4px solid #f59e0b !important;">
            <div class="card-body py-3 px-4">
                <small class="text-muted text-uppercase fw-bold d-block">Total Pendente</small>
                <h3 class="fw-bold mb-0 text-warning">@totalPending</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm" style="border-radius: 12px; border-left: 4px solid #3b82f6 !important;">
            <div class="card-body py-3 px-4">
                <small class="text-muted text-uppercase fw-bold d-block">Novos (últimos 2 dias)</small>
                <h3 class="fw-bold mb-0 text-primary">@recentPending</h3>
            </div>
        </div>
    </div>
</div>

<!-- Pending List -->
@if (pendingList.Any())
{
    <div class="row g-4">
        @foreach (var restaurant in pendingList.OrderBy(r => r.DaysWaiting))
        {
            <div class="col-12">
                <div class="card border-0 shadow-sm hover-lift" style="border-radius: 16px;">
                    <div class="card-body p-4">
                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h5 class="fw-bold mb-2">
                                    <i class="bi bi-shop text-primary me-2"></i>
                                    @restaurant.RestaurantName
                                </h5>
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-clock me-1"></i>
                                        Há @restaurant.DaysWaiting dia@(restaurant.DaysWaiting != 1 ? "s" : "")
                                    </span>
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-geo-alt me-1"></i>
                                        @restaurant.City
                                    </span>
                                </div>
                            </div>
                            
                            @if (restaurant.CreatedAt.HasValue)
                            {
                                <small class="text-muted">
                                    @restaurant.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            }
                        </div>

                        <hr />

                        <!-- Restaurant Info -->
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <div class="info-section">
                                    <h6 class="text-uppercase small fw-bold text-muted mb-2">
                                        <i class="bi bi-building me-1"></i>
                                        Informações do Restaurante
                                    </h6>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Descrição:</small>
                                        <p class="mb-2 small">@restaurant.Description</p>
                                    </div>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Morada:</small>
                                        <p class="mb-2 small">@restaurant.Address, @restaurant.City</p>
                                    </div>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Telefone:</small>
                                        <p class="mb-0 small">
                                            <a href="tel:@restaurant.Phone">@restaurant.Phone</a>
                                        </p>
                                    </div>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Email:</small>
                                        <p class="mb-0 small">
                                            <a href="mailto:@restaurant.Email">@restaurant.Email</a>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="info-section">
                                    <h6 class="text-uppercase small fw-bold text-muted mb-2">
                                        <i class="bi bi-person me-1"></i>
                                        Dados do Proprietário
                                    </h6>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Nome:</small>
                                        <p class="mb-2 small fw-semibold">@restaurant.OwnerName</p>
                                    </div>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Email:</small>
                                        <p class="mb-2 small">
                                            <a href="mailto:@restaurant.OwnerEmail">@restaurant.OwnerEmail</a>
                                        </p>
                                    </div>
                                    <div class="info-row">
                                        <small class="text-muted d-block">Telefone:</small>
                                        <p class="mb-0 small">
                                            <a href="tel:@restaurant.OwnerPhone">@restaurant.OwnerPhone</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                            <!-- Approve with Plan Selection -->
                            <button type="button" 
                                    class="btn btn-success px-4"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#approveModal@(restaurant.RestaurantId)">
                                <i class="bi bi-check-circle me-2"></i>
                                Aprovar
                            </button>

                            <!-- Reject -->
                            <button type="button" 
                                    class="btn btn-outline-danger px-4"
                                    data-bs-toggle="modal" 
                                    data-bs-target="#rejectModal@(restaurant.RestaurantId)">
                                <i class="bi bi-x-circle me-2"></i>
                                Rejeitar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Approve Modal with Plan Selection -->
            <div class="modal fade" id="approveModal@(restaurant.RestaurantId)" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form method="post" asp-action="Approve">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@restaurant.RestaurantId" />
                            
                            <div class="modal-header bg-success text-white">
                                <h5 class="modal-title">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Aprovar Restaurante
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            
                            <div class="modal-body">
                                <div class="alert alert-info">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Ao aprovar, o restaurante <strong>@restaurant.RestaurantName</strong> 
                                    será ativado e o owner poderá fazer login.
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label fw-bold">
                                        Escolha o Plano <span class="text-danger">*</span>
                                    </label>
                                    <select name="planId" class="form-select form-select-lg" required>
                                        <option value="">Selecione um plano...</option>
                                        <option value="1">Básico - €29/mês - 5% comissão</option>
                                        <option value="2">Pro - €79/mês - 10% comissão</option>
                                        <option value="3">Premium - €199/mês - 15% comissão</option>
                                    </select>
                                    <small class="text-muted">
                                        O plano pode ser alterado posteriormente.
                                    </small>
                                </div>
                            </div>
                            
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg me-2"></i>
                                    Aprovar e Criar Subscription
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Reject Modal -->
            <div class="modal fade" id="rejectModal@(restaurant.RestaurantId)" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form method="post" asp-action="Reject">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@restaurant.RestaurantId" />
                            
                            <div class="modal-header">
                                <h5 class="modal-title">Rejeitar Pedido</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            
                            <div class="modal-body">
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <strong>Atenção:</strong> Esta ação irá eliminar permanentemente 
                                    o restaurante e o utilizador associado.
                                </div>
                                
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        Motivo da Rejeição
                                    </label>
                                    <textarea name="reason" 
                                              class="form-control" 
                                              rows="4" 
                                              required
                                              placeholder="Explique o motivo da rejeição..."></textarea>
                                    <small class="text-muted">
                                        Este motivo será enviado por email ao proprietário.
                                    </small>
                                </div>
                            </div>
                            
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                    Cancelar
                                </button>
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash me-2"></i>
                                    Rejeitar Definitivamente
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <!-- Empty State -->
    <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="bi bi-check-circle" style="font-size: 5rem; color: #10b981;"></i>
            </div>
            <h4 class="fw-bold mb-2">Tudo em dia!</h4>
            <p class="text-muted mb-4">
                Não há restaurantes pendentes de aprovação no momento.
            </p>
            <a href="@Url.Action("Index", "Restaurants", new { area = "Admin" })" 
               class="btn btn-primary">
                <i class="bi bi-shop me-2"></i>
                Ver Restaurantes Ativos
            </a>
        </div>
    </div>
}
