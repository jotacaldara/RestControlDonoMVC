@model RestControlMVC.DTOs.UserDTO

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 p-4">
                <h3 class="fw-bold mb-4">Editar Utilizador</h3>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="id" />

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Nome Completo</label>
                        <input asp-for="name" class="form-control rounded-3" placeholder="Ex: João Silva" />
                        <span asp-validation-for="name" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">E-mail</label>
                        <input asp-for="email" type="email" class="form-control rounded-3" placeholder="email@exemplo.com" />
                        <span asp-validation-for="email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Perfil de Acesso</label>
                        <select asp-for="role" class="form-select rounded-3">
                            <option value="Admin">Administrador Central</option>
                            <option value="Owner">Dono de Restaurante</option>
                            <option value="Customer">Cliente</option>
                        </select>
                    </div>

                    <div class="mb-4 d-flex align-items-center">
                        <div class="form-check form-switch">
                            <input asp-for="isActive" class="form-check-input" type="checkbox" id="statusSwitch">
                            <label class="form-check-label ms-2" for="statusSwitch">Conta Ativa</label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary px-4 rounded-pill">Salvar Alterações</button>
                        <a asp-action="Index" class="btn btn-light px-4 rounded-pill">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>