@model IEnumerable<RestControlMVC.DTOs.UserDTO>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<RestControlMVC.AdminSharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Users_Title"].Value;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold mb-0">@Localizer["Users_Title"]</h3>
        <p class="text-muted small">@Localizer["Users_Subtitle"]</p>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="table-responsive p-3">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Email"]</th>
                    <th>@Localizer["Users_Role"]</th>
                    <th>@Localizer["Status"]</th>
                    <th class="text-end">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="bg-primary-subtle text-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                     style="width: 35px; height: 35px;">
                                    @user.name.Substring(0, 1).ToUpper()
                                </div>
                                <span class="fw-medium">@user.name</span>
                            </div>
                        </td>
                        <td>@user.email</td>
                        <td>
                            <span class="badge @(user.role == "Admin" ? "bg-dark" : "bg-secondary-subtle text-dark")">
                                @user.role
                            </span>
                        </td>
                        <td>
                            @if (user.isActive)
                            {
                                <span class="text-success small">
                                    <i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>
                                    @Localizer["Active"]
                                </span>
                            }
                            else
                            {
                                <span class="text-danger small">
                                    <i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>
                                    @Localizer["Inactive"]
                                </span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@user.id"
                               class="btn btn-sm btn-outline-secondary border-0"
                               title="@Localizer["Edit"]">
                                <i class="bi bi-pencil"></i>
                            </a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
