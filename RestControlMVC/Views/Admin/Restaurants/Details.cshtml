@model RestControlMVC.DTOs.RestaurantDetailDTO

<div class="container-fluid py-4">
    <div class="position-relative rounded-4 overflow-hidden mb-4 shadow-sm" style="height: 300px;">
        <img src="@(Model.Images.FirstOrDefault() ?? "/img/default-restaurant.jpg")" class="w-100 h-100 object-fit-cover" style="filter: brightness(0.6);">
        <div class="position-absolute bottom-0 start-0 p-4 text-white">
            <span class="badge bg-warning text-dark mb-2"><i class="bi bi-star-fill"></i> @Model.AverageRating.ToString("F1") (@Model.TotalReviews Reviews)</span>
            <h1 class="display-5 fw-bold">@Model.Name</h1>
            <p class="mb-0 opacity-75"><i class="bi bi-geo-alt"></i> @Model.Address, @Model.City</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Sobre o Restaurante</h5>
                    <p class="text-secondary">@Model.Description</p>
                </div>
            </div>

            <h4 class="fw-bold mb-3 mt-5">Cardápio Digital</h4>

            @foreach (var category in Model.MenuCategories)
            {
                <div class="mb-5">
                    <h5 class="text-primary fw-bold border-bottom pb-2 mb-3">@category.Name</h5>
                    <div class="row g-3">
                        @foreach (var product in category.Products)
                        {
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm rounded-3 hover-shadow transition">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="fw-bold mb-1">@product.Name</h6>
                                            <p class="text-muted small mb-0">@product.Description</p>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success-subtle text-success fs-6">@product.Price.ToString("C")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 20px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4">Informações de Contato</h5>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-telephone text-primary me-3 fs-4"></i>
                        <div>
                            <p class="text-muted small mb-0">Telefone</p>
                            <p class="fw-medium mb-0">@Model.Phone</p>
                        </div>
                    </div>
                    <hr>
                    <button class="btn btn-primary w-100 mb-2 py-2 rounded-pill">Editar Restaurante</button>
                    <button class="btn btn-outline-danger w-100 py-2 rounded-pill">Desativar Unidade</button>
                </div>
            </div>
        </div>
    </div>
</div>