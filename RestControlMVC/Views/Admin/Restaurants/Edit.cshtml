@model RestControlMVC.DTOs.RestaurantDetailDTO

<div class="card border-0 shadow-sm rounded-4 p-4">
    <h3 class="fw-bold mb-4">Editar Dados: @Model.Name</h3>
    <form asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Nome do Restaurante</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Telefone</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="col-md-12 mb-3">
                <label class="form-label">Descrição</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Cidade</label>
                <input asp-for="City" class="form-control" />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Morada</label>
                <input asp-for="Address" class="form-control" />
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary px-5 rounded-pill">Guardar Alterações</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light px-5 rounded-pill">Voltar</a>
        </div>
    </form>
</div>