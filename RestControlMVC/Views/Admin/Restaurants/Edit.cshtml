@model RestControlMVC.DTOs.RestaurantDetailDTO
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<RestControlMVC.AdminSharedResource> Localizer

@{
    ViewData["Title"] = "Editar Restaurante (Admin)";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="h2 mb-1 fw-bold" style="color: #1e293b;">
            <i class="bi bi-pencil-square me-2" style="color: #10b981;"></i>
            Editar Restaurante
        </h1>
        <p class="text-muted mb-0">Gestão administrativa de informações do estabelecimento</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card card-custom border-0 shadow-sm">
            <div class="card-body p-4">
                <form asp-action="Update" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label fw-semibold">
                            <i class="bi bi-shop me-1" style="color: #10b981;"></i>
                            Nome do Restaurante
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg" style="border-radius: 12px; border: 2px solid #e5e7eb;" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="bi bi-card-text me-1" style="color: #10b981;"></i>
                            @Localizer["EditRestaurant_DescriptionLabel"]
                        </label>
                        <textarea asp-for="Description"
                                  class="form-control form-control-lg"
                                  rows="5"
                                  style="border-radius: 12px; border: 2px solid #e5e7eb;"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <label asp-for="City" class="form-label fw-semibold">
                                <i class="bi bi-geo-alt me-1" style="color: #10b981;"></i>
                                Cidade
                            </label>
                            <input asp-for="City" class="form-control form-control-lg" style="border-radius: 12px; border: 2px solid #e5e7eb;" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-4">
                            <label asp-for="Phone" class="form-label fw-semibold">
                                <i class="bi bi-telephone me-1" style="color: #10b981;"></i>
                                @Localizer["EditRestaurant_PhoneLabel"]
                            </label>
                            <input asp-for="Phone" class="form-control form-control-lg" style="border-radius: 12px; border: 2px solid #e5e7eb;" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Address" class="form-label fw-semibold">
                            <i class="bi bi-map me-1" style="color: #10b981;"></i>
                            Morada Completa
                        </label>
                        <input asp-for="Address" class="form-control form-control-lg" style="border-radius: 12px; border: 2px solid #e5e7eb;" />
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg px-4">
                            <i class="bi bi-check-circle me-1"></i>
                            @Localizer["Save"]
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-x-circle me-1"></i>
                            @Localizer["Cancel"]
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}