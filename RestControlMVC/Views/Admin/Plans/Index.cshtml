@model IEnumerable<RestControlMVC.DTOs.SubscriptionDTO>

<div class="p-4">
    <h3 class="fw-bold mb-4">Gestão de Planos & Financeiro</h3>

    <ul class="nav nav-pills mb-4" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active rounded-pill" data-bs-toggle="pill" data-bs-target="#tab-expiring">Vencimentos</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link rounded-pill" data-bs-toggle="pill" data-bs-target="#tab-configs">Configuração de Planos</button>
        </li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab-expiring">
            <div class="card border-0 shadow-sm p-3">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Restaurante</th>
                            <th>Vencimento</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.RestaurantName</td>
                                <td><span class="badge @(item.DaysRemaining < 3 ? "bg-danger" : "bg-warning")">@item.EndDate</span></td>
                                <td>
                                    <button onclick="enviarEmail(@item.SubscriptionId)" class="btn btn-sm btn-primary">Enviar Cobrança</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="tab-configs">
            <div class="row g-4">
                @foreach (var plan in ViewBag.Plans as List<RestControlMVC.DTOs.PlanDTO>)
                {
                    <div class="col-md-4">
                        <div class="card border-0 shadow-sm rounded-4 h-100">
                            <div class="card-body">
                                <h5 class="fw-bold">@plan.Name</h5>
                                <form asp-action="EditPlan" method="post">
                                    <input type="hidden" name="PlanId" value="@plan.PlanId" />
                                    <input type="hidden" name="Name" value="@plan.Name" />

                                    <div class="mb-3">
                                        <label class="small text-muted">Mensalidade (€)</label>
                                        <input type="number" step="0.01" name="MonthlyPrice" class="form-control" value="@plan.MonthlyPrice.ToString("F2")" />
                                    </div>
                                    <div class="mb-3">
                                        <label class="small text-muted">Comissão por Reserva (%)</label>
                                        <input type="number" step="0.1" name="ReservationCommission" class="form-control" value="@plan.ReservationCommission.ToString("F1")" />
                                    </div>
                                    <button type="submit" class="btn btn-dark w-100">Salvar Alterações</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>